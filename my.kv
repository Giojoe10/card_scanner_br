<HomePage>:
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Scanner de Cartas"
            halign:"center"

        MDBottomNavigation:
            # Add a NavigationItem for each Navigation.
            MDBottomNavigationItem:
                name: "Scanner"
                icon: "camera"

                ScannerTab:
                    name:"ScannerTab"

            MDBottomNavigationItem:
                name: "Carta"
                icon: "cards-outline"

                CartaTab:
                    name:"CartaTab"


            MDBottomNavigationItem:
                name: "Lista"
                icon: "list-box"

                ListaTab:

                MDAnchorLayout:
                    anchor_x:"center"
                    size_hint_y:None
                    anchor_y:"bottom"
                    bg_color:[1,1,1,1]
                    MDBoxLayout:
                        width:root.width
                        size_hint_y:None
                        height:"50dp"
                        md_bg_color:[0.3,0.3,0.3,1]
                        width:root.width
                        padding:["15dp",0]
                        MDLabel:
                            font_name:"assets/fonts/FiraSans-SemiBold"
                            text:"Total:"
                            halign:"left"
                            font_size:"20dp"
                        MDLabel:
                            font_name:"assets/fonts/FiraSans-SemiBold"
                            text:"R$354,99"
                            halign:"right"
                            font_size:"20dp"


<ScannerTab>
    orientation:"vertical"
    id:scannertab
    MDLabel:
        text:"[Camera]"
        size_hint:1,1
        halign:"center"
    # Camera:
    #     resolution: 1920, 1080
    #     play: True
    #     size_hint:2,2
    #     allow_stretch:True
    #     center:self.size and scannertab.center
    #     canvas.before:
    #         PushMatrix
    #         Rotate:
    #             angle: -90
    #             axis: 0,0,1
    #             origin: root.width/2, root.height/2
    #     canvas.after:
    #         PopMatrix
    MDFloatLayout:
        anchor_x:"center"
        anchor_y:"bottom"
        MDIconButton:
            icon: "camera-outline"
            pos_hint: {'center_x': .5,'center_y': 0.1}
            md_bg_color: [0,0,0,1]
    
    MDFloatLayout:
        canvas:
            Color:
                rgba: 0,1,0,0.2
            Rectangle:
                pos: scannertab.width/2 - dp(100), scannertab.height/2 - dp(100*1.38)
                size: dp(200),dp(200*1.38)



<ListaTab>
    MDGridLayout:
        bg_color:[1,1,1,1]
        cols:1
        size_hint_y: None
        # orientation:'vertical'
        padding:[0,"25dp"]
        spacing:"25dp"


        CartaNaLista:
            name:"Chandra, Hope's Beacon"
            image:"https://cards.scryfall.io/art_crop/front/6/2/62707510-96ae-492f-8b14-a34d0c9fb859.jpg?1682206446"
            set_name:"Marcha das Máquinas (Borderless)"
            acabamento:"Foil"
            qnt:1
            preco:174.99
        
        CartaNaLista:
            name:"Elesh Norn // The Argent Etchings"
            image:"https://cards.scryfall.io/art_crop/front/4/4/44dcab01-1d13-4dfc-ae2f-fbaa3dd35087.jpg?1675956896"
            set_name:"Phyrexia: Tudo será um"
            acabamento:"Normal"
            qnt:2
            preco:90
            
        


<CartaTab>
    id: carta_tab
    do_scroll_x: False
    do_scroll_y: True
    MDGridLayout:
        id:grid
        bg_color:[1,1,1,1]
        cols:1
        size_hint_y: None
        padding:["25dp","25dp"]
        spacing:"25dp"
        height: self.minimum_height
        MDTextField:
            id:campo_nome
            hint_text: "Pesquisa por nome"
            helper_text: "Ex. Bocarra Sinistra Colossal"
            helper_text_mode: "on_focus"
            icon_right: "magnify"
            on_text_validate:carta_tab.search(self.text)

        AsyncImage:
            source: root.image_url
            # source: "assets\images\chandra.png"
            size_hint_y:None
            height:root.width
            allow_stretch:True
            keep_ratio:True
        MDLabel:
            text:root.card_name
            font_size:"18dp"
            font_name:"assets/fonts/FiraSans-Bold"
            text_color:[0,0,0,1]
            halign:"center"
            bold:True
        MDGridLayout:
            id:set_cards
            bg_color:[1,1,1,1]
            cols:1
            size_hint_y: None
            padding:[0,"25dp"]
            spacing:"25dp"
            height: self.minimum_height


<ListaPrecos>
    padding:[0,"10dp"]
    orientation:'vertical'
    spacing:"20dp"
    adaptive_height: True
    size_hint_y:None
    size: self.size
    MDLabel:
        text: root.set_name
        font_name:"assets/fonts/FiraSans-SemiBold"

<SetCard>
    adaptive_height: True
    orientation:'vertical'
    md_bg_color:[0.3,0.3,0.3,1]
    size_hint: 1, None
    padding:["20dp","20dp"]
    height:self.minimum_height

       
<LinhaPreco>
    cols:3
    MDTextButton:
        md_bg_color:[0.2,0.2,0.2,0.2]
        text:"+"
        halign:'center'
        color:[1,1,1,1]
        width:"20dp"
    MDTextButton:
        md_bg_color:[1,0.5,0.5,0.2]
        text:"-"
        halign:'center'
        color:[1,1,1,1]
        width:"20dp"
    MDLabel:
        padding:["8dp","8dp"]
        text: root.acabamento + ": R$" + str("{:.2f}".format(root.preco))
        height: self.texture_size[1]
        font_size:"16dp"


<CartaNaLista>
    size_hint_y:None
    height: "150dp"
    width:root.width
    FitImage:
        pos_hint:{"center_x":0.5, "center_y":0.5}
        source:root.image
    FitImage:
        pos_hint:{"center_x":0.5, "center_y":0.5}
        source:"./assets/images/overlay.png"
    MDLabel:
        pos_hint:{"center_x":0.5, "center_y":0.5}
        text:f"{root.name}\n{root.set_name}\n{root.qnt}x {root.acabamento}: R${root.preco:.2f}"
        halign:"center"
        font_size:"22dp"
        outline_width:"2dp"
        outline_colour:[1,1,1,1]
        
